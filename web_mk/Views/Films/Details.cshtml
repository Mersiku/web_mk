@model Film
<table>
    <tr>
        <td>
            <h2>@Model.Category.Name</h2>
            @(await Component.InvokeAsync("SideMenu", new {categoryName=Model.Category.Name}))
        </td>
        <td>
            <img src="~/posters/@Model.Poster" style="width: 150px; height: auto;" alt="Grafika @Model.Poster">
        </td>
        <td>
            <ul>
                <li><b>Tytuł: </b> @Model.Title</li>
                <li><b>Reżyser: </b> @Model.Director</li>
                <li><b>Cena: </b> @Model.Price</li>
                <li><b>Opis: </b> @Model.Desc</li>
            </ul>

            <p><a href="@Url.Action("addToCart", "Cart", new {filmId = Model.FilmId})"> KOSZ </a></p>
        </td>

    </tr>
</table>